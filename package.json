{
  "name": "@thespielplatz/nuxt-dev-base",
  "homepage": "https://github.com/thespielplatz/nuxt-dev-base",
  "version": "0.0.5",
  "description": "Development base module for Nuxt",
  "repository": "github:thespielplatz/nuxt-dev-base",
  "license": "MIT",
  "private": false,
  "type": "module",
  "meta": {
    "special-version": "0.0.1-for-testing"
  },
  "exports": {
    ".": {
      "types": "./dist/types.d.ts",
      "import": "./dist/module.mjs",
      "require": "./dist/module.cjs"
    }
  },
  "main": "./dist/module.cjs",
  "types": "./dist/types.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepack": "nuxt-module-build build",
    "dev": "nuxi dev playground",
    "dev:build": "nuxi build playground",
    "dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare && nuxi prepare playground",
    "release": "npm run lint && npm run test && npm run prepack && changelogen --release && git push --follow-tags && npm publish",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:types": "vue-tsc --noEmit && cd playground && vue-tsc --noEmit"
  },
  "dependencies": {
    "@nuxt/kit": "^3.15.4",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@nuxt/devtools": "^1.7.0",
    "@nuxt/eslint-config": "^0.7.5",
    "@nuxt/module-builder": "^0.8.4",
    "@nuxt/schema": "^3.15.2",
    "@nuxt/test-utils": "^3.15.4",
    "@types/node": "latest",
    "changelogen": "^0.5.7",
    "eslint": "^9.18.0",
    "nuxt": "^3.15.2",
    "typescript": "~5.7.3",
    "vitest": "^3.0.5",
    "vue-tsc": "^2.2.0"
  },
  "peerDependencies": {
    "consola": "^3.3.3",
    "defu": "^6.1.4"
  }
}
